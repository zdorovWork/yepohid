{
   "printWidth": 120,
   "trailingComma": "all",
   "useTabs": false,
   "tabWidth": 2,
   "semi": true,
   "singleQuote": false,
   "bracketSpacing": true,
   "jsxBracketSameLine": false,
   "arrowParens": "always",
   "plugins": ["@trivago/prettier-plugin-sort-imports"],
   "importOrder": [
     "^react(.*)?$",
     "<THIRD_PARTY_MODULES>",
     "^entities/(.*)$",
     "^features/(.*)$",
     "^widgets/(.*)$",
     "^shared/(.*)$",
     "^_store/(.*)$",
     "^[./].*(?<!\\.(c|le|sc)ss)$",
     "\\.(c|le|sc)ss$"
   ],
   "importOrderSeparation": true,
   "importOrderSortSpecifiers": true
 }